<!Doctype html>
<html>
<head>
    <%- include('../include/head')%>   
    <link rel="stylesheet" href="/css/estilos_registro.css">
</head>

<body>
    <header>
        <%- include('../include/nav')%>
        <div class="img-ppal-login"> <img src="/imagenes/img_ppal_login.png" class="img-ppal-login-2" alt="finca-bertona"></div>
    </header>
    <main>
        <section class="contenedorSeccion1">
            <h1 class="titulo-registro">CREA TU CUENTA</h1>
        <!----   % < if (locals.errors) {
                errors.forEach(error => { %>
                <p>< %= error.msg %></p>
                < % }) 
            }%> --->
            <form class= "formulario-registro" action="/guardarUsuario" method="POST" enctype="multipart/form-data" >
                <fieldset class= "campo-formulario">
                    <label for="nombre">Nombre:</label>
                    <input type="text" name= "nombre" id="nombre" pattern="{4,30}" class="control"  placeholder="Escriba su nombre">
                    <% if (locals.errors && errors.nombre) { %>
                     <p class="feedback"><%=errors.nombre.msg%>  </p>
                    <% } %>
                </fieldset>
                <fieldset class= "campo-formulario">
                    <label for="apellido">Apellido:</label>
                    <input type="text" name= "apellido" id="apellido"  class="control" placeholder="Escriba su apellido">
                    <% if (locals.errors && errors.apellido) { %>
                        <p class="feedback"><%=errors.apellido.msg%>  </p>
                       <% } %>
                </fieldset>
                <fieldset class= "campo-formulario">
                    <label for="email">E-mail:</label>
                    <input 
                    type="text" 
                    name= "email"  
                    class="control <%= locals.errors && errors.email ? 'is-invalid' : null %>" 
                    value="<%= locals.oldData ? oldData.email : null %>"
                    placeholder="Escriba su direccion de mail">
                    <% if (locals.errors && errors.email) { %>
                        <p class="feedback"><%=errors.email.msg%>  </p>
                       <% } %>
                </fieldset>
                <fieldset class= "campo-formulario">
                    <label for="fecha-de-nacimiento">Fecha de nacimiento:</label>
                    <input type="date" name="fechaDeNacimiento" value="2021-07-22" id= "fecha-de.nacimiento"class="control" placeholder= "Escriba su fecha de nacimiento">
                    <% if (locals.errors && errors.fechaDeNacimiento) { %>
                        <p class="feedback"><%=errors.fechaDeNacimiento.msg%>  </p>
                       <% } %>
                </fieldset>
                <fieldset class= "campo-formulario">
                    <label for="domicilio">Domicilio:</label>
                    <input type="text" name= "domicilio" id="domicilio" class="control"  placeholder="Escriba su domicilio">
                    <% if (locals.errors && errors.domicilio) { %>
                        <p class="feedback"><%=errors.domicilio.msg%>  </p>
                       <% } %>
                </fieldset>
                <fieldset class="campo-formulario">
                    <label for="clave">Contraseña:</label>
                    <input type="password" name="clave" id="clave" class="control" placeholder="Escriba su contraseña">
                    <% if (locals.errors && errors.clave) { %>
                        <p class="feedback"><%=errors.clave.msg%>  </p>
                       <% } %>
                </fieldset>
        
                <!----<fieldset class="campo-formulario campo-formulario-mensaje">
                    <label for="confirmacion-clave">Confirme su contraseña:</label>
                    <input type="password" name="confirmacion-clave" id="confirmación-clave" class="control" required placeholder="Confirme su contraseña">
                </fieldset> --->
                <fieldset class="campo-formulario">
                    <label for="uploads">Subir imagen de perfil:</label>
                    <input type="file" name="image" id="image" class="control" placeholder="Suba la imágen del producto">
                </fieldset>
                <button type="submit" class= "boton-formulario-enviar">ENVIAR</button>  
            </form>
    </main>
    <%- include('../include/footer')%>
</body>
</html>
