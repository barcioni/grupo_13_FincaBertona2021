<!Doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finca Bertona</title>
    <link rel="stylesheet" href="/css/estilos_contacto.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> 
</head>

<body>
    <header>
        <%- include('./include/nav')%>
        <figure class="img-ppal-login"><img src="/imagenes/img_ppal_contacto.png" class="img-ppal-contacto" alt="finca-bertona"></figure>
    </header>
    <main> 
        <section class="contenedorSeccion1">
        <h1 class="titulo-contacto">CONSULTAS Y COMENTARIOS</h1>
        <form class="formulario-contacto" action="/contacto" method="POST">
            <fieldset class= "campo-formulario">
                <label for="nombre-completo"></label>
                <input type="text" name="nombre-completo" id="nombre-completo" placeholder="Nombre y Apellido" class="control" required placeholder>
            </fieldset>
            <fieldset class= "campo-formulario">
                <label for="email"></label>
                <input type="email" name="email" id="email" placeholder="E-mail" class="control" required placeholder>
            </fieldset>
            <fieldset class= "campo-formulario">
                <label for="pais"></label>
                <input type="text" name="pais" id="pais" placeholder="País de residencia" class="control" required placeholder>
            </fieldset>
            <fieldset class= "campo-formulario">
                <label for="provincia"></label>
                <input type="text" name="provincia" id="provincia" placeholder="Provincia" class="control" >
            </fieldset>
            <fieldset class= "campo-formulario">
                <label for="localidad"></label>
                <input type="text" name="localidad" id="localidad" placeholder="Localidad" class="control" >
            </fieldset>
            <fieldset class= "campo-formulario">
                <label for="telefono"></label>
                <input type="number" name="telefono" id="telefono" placeholder="Teléfono" class="control" >
            </fieldset>
            <fieldset class= "campo-formulario">
                <label for="mensaje"></label>
                <textarea name="mensaje" id="mensaje" placeholder="Tu mensaje..." class="control-mensaje"></textarea>
            </fieldset>
            <button type="submit" class= "boton-formulario-enviar" >ENVIAR</button>
           </form>
        </section>
    
    
    </main>
    
    <%- include('./include/footer')%>
    </body>
    </html>