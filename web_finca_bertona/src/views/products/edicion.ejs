<!Doctype html>
<html>
<head>
    <%- include('../include/head')%>
    <link rel="stylesheet" href="/css/estilos_edicion.css">
</head>
<body>
    <header>
        <%- include('../include/nav')%>
    <figure class="img-ppal-edicion"><img src="/imagenes/img_ppal_contacto.png" class="img__ppal__vinos" alt="finca-bertona"></figure>
    </header>
    <section id="contenedor__general">
        <section id="contenedor__secundario">
                <img src="/uploads/products/<%= product.image%>" class="imagen-producto" id="botella" alt=""> 
                <a href="/tienda/editarImagen/<%= product.id %>" id="texto-editar-imagen">Click aquí para editar la imágen</a>
                <form action="/tienda/actualizar/<%= product.id %>?_method=PUT" method="post" id="edit-form" enctype="multipart/form-data">
                    <fieldset>
                        <label for="marca">Marca</label>
                        <select name="brand" id="brand">
                            <% brands.forEach(brand => { %>
                                <% if (brand.id == brand.id) { %>
                                    <option value="<%= brand.id %>" selected><%= brand.name %></option>
                                <% } else { %>
                                    <option value="<%= brand.id %>"><%= brand.name %></option>
                                <% } %>
                            <% }) %>
                        </select>        
                    </fieldset>
                    <fieldset>
                        <label for="cosecha">Cosecha</label>
                        <input type="text" name="year" id="year" class="campo-form-edicion" value="<%= product.year %>" >
                    </fieldset>
                    <fieldset>
                        <label for="price">Precio</label>
                        <input type="number" name="price" id="price" class="campo-form-edicion" value="<%= product.price %>" >
                    </fieldset>
                    <fieldset>
                        <label for="stock-disponible">Stock disponible: <%=product.stock%> </label>
                    </fieldset>
                    <fieldset>
                        <label for="stock"> Agregar/Quitar stock </label>
                        <input type="number" name="stock" id="stock" class="campo-form-edicion" value="0" >
                    </fieldset>
                    <fieldset>
                        <label for="varietal">Varietal</label>
                        <input type="text" name="varietal" id="varietal" class="campo-form-edicion" value="<%= product.varietal %>" >
                    </fieldset>
                    <fieldset>
                        <label for="graduacion">Graduación alcohólica</label>
                        <input type="number" name="graduacion" id="graduacion" class="campo-form-edicion" value="<%= product.graduacion %>" >
                    </fieldset>
                    <fieldset>
                        <label for="barrica">Tiempo en barrica</label>
                        <input type="text" name="barrica" id="barrica" class="campo-form-edicion" value="<%= product.barrica %>" >
                    </fieldset>
                    <fieldset>
                        <label for="guarda">Tiempo de guarda</label>
                        <input type="text" name="guarda" id="guarda" class="campo-form-edicion" value="<%= product.guarda %>" >
                    </fieldset>
                    <fieldset>
                        <label for="description">Descripción</label>
                        <input type="text" name="description" id="description" class="campo-form-edicion" value="<%= product.description %>" >
                    </fieldset>
                        <article id="contenedor-botones">
                        <button type="submit" id="boton-editar">EDITAR PRODUCTO</button>
                    </form>
                <form action="/tienda/eliminar/<%= product.id %>>?_method=DELETE" method="post" id="edit-form" enctype="multipart/form-data">
                    <button type="submit" id="boton-eliminar">ELIMINAR PRODUCTO</button>
                </form>
                </article>
                </section> 
                <section class="errores contenedorTextoErrores">
                    <small class="textoErrores"></small>
                </section> 
    </section>
    <%- include('../include/footer')%>
    <script src="js/validacionesEdicionProducto.js"></script>
</body>
</html>
